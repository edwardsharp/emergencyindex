<h1>Projects</h1>

<table class="highlight responsive-table">
  <thead>
    <tr>
      <th>Date Submitted</th>
      <th>Name</th>
      <th>Title</th>
      <th>First date</th>
      <th>Venue</th>
      <th>Home</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= l project.created_at, format: :short %></td>
        <td><%= project.name %></td>
        <td><%= project.title %></td>
        <td><%= project.first_date %></td>
        <td><%= project.venue %></td>
        <td><%= project.home %></td>
        <td><%= image_tag project.attachment.url(:thumb) if project.attachment.present? %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
