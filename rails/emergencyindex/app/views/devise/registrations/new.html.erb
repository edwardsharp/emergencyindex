<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-field">
    <%= f.text_field :name, id: :name, class: 'validate', required: true, pattern: '.{3,}', autofocus: true  %>
    <%= f.label :name, data: { error: "Required (minimum of 3 characters)." } %>
  </div>

  <div class="input-field">
    <%= f.text_field :phone, id: :phone, class: 'validate', required: true, pattern: '.{10,}' %>
    <%= f.label :phone %>
  </div>

  <div class="input-field">
    <%= f.text_area :postal, id: :postal, class: 'materialize-textarea validate', required: true %>
    <%= f.label :postal %>
  </div>

  <div class="input-field">
    <%= f.email_field :email, id: :email, class: 'validate', required: true %>
    <%= f.label :email, data: { error: "Please enter a valid email." } %>
  </div>

  <div class="input-field">
    
    <%= f.password_field :password, autocomplete: "off", pattern: '.{6,}' %>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="input-field">
    
    <%= f.password_field :password_confirmation, autocomplete: "off", pattern: '.{6,}' %>
    <%= f.label :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "Register", class: 'waves-effect waves-light btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
